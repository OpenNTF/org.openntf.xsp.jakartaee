								<artifact><id>jakarta.interceptor:jakarta.interceptor-api:2.0.1</id><source>true</source></artifact>
								<artifact>
									<id>org.jboss.resteasy:resteasy-core:${resteasy-version}</id>
									<source>true</source>
									<override>true</override>
