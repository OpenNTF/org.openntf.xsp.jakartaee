									<source>true</source>
									<override>true</override>
									<instructions>
										<Bundle-SymbolicName>org.openntf.org.eclipse.krazo.core</Bundle-SymbolicName>
										<Bundle-Version>4.1.0.${osgi.qualifier}</Bundle-Version>
