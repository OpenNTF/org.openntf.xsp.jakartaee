								<artfiact><id>jakarta.transaction:jakarta.transaction-api:2.0.0</id><source>true</source></artfiact>
								<artifact>
									<id>jakarta.websocket:jakarta.websocket-api:2.0.0</id>
									<source>true</source>
									<!-- Repackage to avoid the OSGi version containing "SNAPSHOT" -->
									<override>true</override>
									<instructions>
										<Bundle-SymbolicName>org.openntf.jakarta.websocket-api</Bundle-SymbolicName>
										<Bundle-Version>2.0.0.${osgi.qualifier}</Bundle-Version>
										<Export-Package>*;version="2.0.0"</Export-Package>
									</instructions>
								</artifact>
								<artfiact><id>jakarta.xml.ws:jakarta.xml.ws-api:3.0.1</id><source>true</source></artfiact>
								
								<!-- Repackage to avoid trouble with a build finding a newer, beta-only version -->
