									<source>true</source>
									<override>true</override>
									<instructions>
										<Bundle-SymbolicName>org.openntf.org.apache.myfaces.core.api</Bundle-SymbolicName>
										<Bundle-Version>4.1.2.${osgi.qualifier}</Bundle-Version>
