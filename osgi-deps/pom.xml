									<id>org.jboss.logging:jboss-logging:3.6.1.Final</id>
									<source>true</source>
									<override>true</override>
									<instructions>
										<Bundle-SymbolicName>org.openntf.org.jboss.logging.jboss-logging</Bundle-SymbolicName>
										<Bundle-Version>3.6.1.Final_${osgi.qualifier}</Bundle-Version>
										<Export-Package>org.jboss.logging;version="3.6.1.Final"</Export-Package>
										<Import-Package>
											org.apache.log4j;resolution:=optional,
											org.apache.logging.log4j;version="[2.0,3)";resolution:=optional,
											org.apache.logging.log4j.message;version="[2.0,3)";resolution:=optional,
											org.apache.logging.log4j.spi;version="[2.0,3)";resolution:=optional,
											org.jboss.logmanager;version="[1.5,2)";resolution:=optional,
											org.slf4j;version="[1.7,2)";resolution:=optional,
											org.slf4j.spi;version="[1.7,2)";resolution:=optional
										</Import-Package>
									</instructions>
								</artifact>
								
								<!-- Repackage to avoid sun.misc import trouble on build -->
								<artifact>
									<id>org.jboss.classfilewriter:jboss-classfilewriter:1.3.1.Final</id>
									<source>true</source>
									<override>true</override>
									<instructions>
										<Bundle-SymbolicName>org.openntf.jboss-classfilewriter</Bundle-SymbolicName>
										<Bundle-Version>1.3.1.Final_${osgi.qualifier}</Bundle-Version>
										<Import-Package>
											!sun.misc,
											!java.*,
											*
										</Import-Package>
										<DynamicImport-Package>sun.misc</DynamicImport-Package>
										<Export-Package>*;version="1.3.1"</Export-Package>
									</instructions>
								</artifact>
								
								<!--
									Mail
								-->
								<artifact><id>jakarta.activation:jakarta.activation-api:2.1.4</id><source>true</source></artifact>
								<artifact><id>org.eclipse.angus:angus-activation:2.0.3</id><source>true</source></artifact>
								<artifact>
									<id>org.eclipse.angus:jakarta.mail:2.0.5</id>
									<source>true</source>
									<override>true</override>
									<instructions>
										<Bundle-SymbolicName>org.openntf.org.eclipse.angus.jakarta.mail</Bundle-SymbolicName>
										<Bundle-Version>2.0.3.${osgi.qualifier}</Bundle-Version>
										<Import-Package>jakarta.*</Import-Package>
										<Export-Package>jakarta.*;version="2.1.0"</Export-Package>
									</instructions>
								</artifact>
								
								<!--
									Jakarta Pages and Tags
								-->
								<artifact><id>jakarta.servlet.jsp:jakarta.servlet.jsp-api:4.0.0</id><source>true</source></artifact>
								<artifact><id>jakarta.servlet.jsp.jstl:jakarta.servlet.jsp.jstl-api:3.0.2</id><source>true</source></artifact>
								<!-- WaSP implements both Pages and Tags as of 4.0 -->
								<artifact><id>org.glassfish.wasp:wasp:4.0.0</id><source>true</source></artifact>
								
								<!--
									Jakarta Faces
								-->
